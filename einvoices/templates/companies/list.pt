<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal">
<head>
    <title>Macros</title>
</head>
<body><metal:companies_list define-macro="companies_list">
<div class='clear'></div>
<br />
<p class='text-right'><span class='bold'>10</span> registros de <span class='bold'>100</span> registros encontrados</p>
<div class='clear'></div>
<table>
	<tr class='titles'>
		<th colspan='7'>Generales</th>
		<th colspan='2'>Acción</th>
	</tr>
	<tr class='titles'>
		<th>Id</th>
		<th>Nombre</th>
		<th>RFC</th>
		<th>Dirección</th>
		<th>CP</th>
		<th>Razon Social</th>
		<th>CURP</th>
		<th class='global-td'>Editar</th>
		<th class='global-td'>Estado</th>
	</tr>
	<?python color = 'trgreen2' ?>
	<tr tal:repeat="row companies" class='${color}'>
		<td>${row.id}</td>
		<td>${row.name}</td>
		<td>${row.rfc}</td>
		<td>${row.address}</td>
		<td>${row.cp}</td>
		<td>${row.corporateName}</td>
		<td>${row.curp}</td>
		<td><a href='/companies/edit/${row.id}'>Editar</a></td>
		<td><a href='/companies/delete/${row.id}'>Eliminar<a></td>
		<?python
			if color=='trgreen2':
				color = ''
			else:
				color = 'trgreen2'
		?>
	</tr>
</table>
</metal:companies_list></body>
</html>