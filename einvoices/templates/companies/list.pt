<head>
    <title>Macros</title>
</head>
<body><metal:companies_list define-macro="companies_list">
<div class='clear'></div>
<br />
<p class='text-right'><span class='bold'>10</span> registros de <span class='bold'>100</span> registros encontrados</p>
<div class='clear'></div>
<table>
	<tr class='titles'>
		<th colspan='5'>Generales</th>
		<th colspan='2'>Contrato</th>
		<th colspan='3'>Acci√≥n</th>
	</tr>
	<tr class='titles'>
		<th>Name</th>
		<th>Ver</th>
		<th>Editar</th>
		<th>Estado</th>
	</tr>
	<?python color = 'trgreen2' ?>
	<tr tal:repeat="row companies" class='${color}'>
