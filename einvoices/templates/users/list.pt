<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal">
<head>
    <title>Macros</title>
</head>
<body><metal:users_list define-macro="users_list">
<div class='clear'></div>
<br />
<p class='text-right'><span class='bold'>10</span> registros de <span class='bold'>100</span> registros encontrados</p>
<div class='clear'></div>
<table>
	<tr class='titles'>
		<th colspan='7'>Generales</th>
		<th colspan='2'>Acci√≥n</th>
	</tr>
	<tr class='titles'>
		<th>Id</th>
		<th>Email</th>
		<th>PAssword</th>
		<th>First Name</th>
		<th>SEcond Name</th>
		<th>Last Name</th>
		<th>Mother Name</th>
		<th class='global-td'>Editar</th>
		<th class='global-td'>Estado</th>
	</tr>
	<?python color = 'trgreen2' ?>
	<tr tal:repeat="row users" class='${color}'>
		<td>${row.id}</td>
		<td>${row.email}</td>
		<td>${row.password}</td>
		<td>${row.first_name}</td>
		<td>${row.second_name}</td>
		<td>${row.last_name}</td>
		<td>${row.mother_name}</td>
		
		<td><a href='/users/edit/${row.id}'>Editar</a></td>
		<td><a href='/users/delete/${row.id}'>Eliminar<a></td>
		<?python
			if color=='trgreen2':
				color = ''
			else:
				color = 'trgreen2'
		?> 
		
	</tr>
</table>
</metal:users_list></body>
</html>
