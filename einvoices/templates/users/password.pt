<div metal:use-macro="view.global_template"><div metal:fill-slot="content" class='container'>
<div class='center'>
	<form class="form" action='/users/changepassword' method='post' accept-charset='utf-8' enctype="multipart/form-data">
			<p><label for='password'>Password anterior</label></p>
			<p><input type="text" name="password" value="" id='password' class="required"/></p>

			<p><label for='newpassword'>Nuevo password</label></p>
			<p><input type="text" name="newpassword" value="" id='newpassword' class="required"/></p>


			<p><input type='hidden' value='${view.__user__.id}' name='user_id' id='user_id' /></p>
			<p><input type="submit" value="Guardar" class="new submit"/></p>			
	</form>
</div>
</div></div>
